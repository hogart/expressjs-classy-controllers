{
  "name": "expressjs-classy-controllers-es6",
  "version": "0.1.0",
  "description": "Reducing boilerplate code for typical controllers",
  "main": "index.js",
  "scripts": {
    "lint": "jscs . && eslint .",
    "unit": "mocha -u bdd -R spec --recursive --harmony_arrow_functions --harmony_classes test",
    "test": "npm run lint && npm run unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://hogart@github.com/hogart/expressjs-classy-controllers.git"
  },
  "keywords": [
    "expressjs",
    "controller"
  ],
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hogart/expressjs-classy-controllers/issues"
  },
  "homepage": "https://github.com/hogart/expressjs-classy-controllers#readme",
  "dependencies": {},
  "engines": {
    "iojs": "2.3.4"
  },
  "jscsConfig": {
    "esnext": true,
    "requireSpaceAfterKeywords": [
      "if",
      "for",
      "while",
      "do",
      "switch",
      "try",
      "catch"
    ],
    "disallowKeywordsOnNewLine": [
      "else"
    ],
    "disallowSpaceBeforePostfixUnaryOperators": true,
    "disallowMultipleLineStrings": true,
    "requireSpaceBeforeBinaryOperators": true,
    "requireSpaceAfterBinaryOperators": true,
    "disallowSpaceAfterPrefixUnaryOperators": true,
    "excludeFiles": [
      "node_modules"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "no-underscore-dangle": [
        0
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "eol-last": [
        0
      ]
    }
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^0.24.x",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5"
  }
}
