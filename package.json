{
  "name": "expressjs-classy-controllers",
  "version": "0.8.0",
  "description": "Reducing boilerplate code for typical controllers",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "unit": "mocha -u bdd -R spec --recursive --harmony_arrow_functions test",
    "test": "npm run lint && npm run unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://hogart@github.com/hogart/expressjs-classy-controllers.git"
  },
  "keywords": [
    "expressjs",
    "controller"
  ],
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hogart/expressjs-classy-controllers/issues"
  },
  "homepage": "https://github.com/hogart/expressjs-classy-controllers#readme",
  "dependencies": {},
  "engines": {
    "nodejs": "^5.10"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": "eslint-config-yandex",
    "rules": {
      "eol-last": [
        0
      ],
      "comma-dangle": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "constructor-super": [
        "error"
      ],
      "generator-star-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-class-assign": [
        "error"
      ],
      "no-confusing-arrow": [
        "error"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-dupe-class-members": [
        "error"
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-new-symbol": [
        "error"
      ],
      "no-this-before-super": [
        "error"
      ],
      "no-useless-constructor": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "object-shorthand": [
        "error",
        "always"
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "prefer-reflect": [
        "off"
      ],
      "prefer-rest-params": [
        "warn"
      ],
      "prefer-spread": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "require-yield": [
        "error"
      ],
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "yield-star-spacing": [
        "error",
        "after"
      ]
    }
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "eslint": "^2.8.0",
    "eslint-config-yandex": "^1.0.6",
    "mocha": "^2.2.5"
  }
}
